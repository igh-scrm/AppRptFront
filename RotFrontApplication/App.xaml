<Application x:Class="RotFrontApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RotFrontApplication"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="PasswordBoxRedBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>

        <Style x:Key="PasswordBoxOrangeBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="Orange"/>
        </Style>

        <Style x:Key="PasswordBoxYellowBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="Yellow"/>
        </Style>

        <Style x:Key="PasswordBoxGreenYellowBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="GreenYellow"/>
        </Style>

        <Style x:Key="PasswordBoxLimeGreenBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="LimeGreen"/>
        </Style>

        <Style x:Key="PasswordBoxDarkGreenBorder" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="DarkGreen"/>
        </Style>
    </Application.Resources>
</Application>
